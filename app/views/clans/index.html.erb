<%= render "card/header" %>
<div class="container-fluid">
    <div class="row">
        <div class="column-margin col-lg-9 mx-auto pt-5">
            <h1 class="fw-bold text-center">Clans</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb pt-3 d-flex justify-content-center">
                    <li class="breadcrumb-item"><a href="<%= homepage_path %>">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Clans</li>
                </ol>
            </nav>
            <hr class="mt-3">
        </div>  
    </div>
    <div class="container-fluid ">
      <div class="g-col-12">
        <div class="row d-flex flex-wrap mx-auto">
        <% @clans.each do |clan| %>
            <div class="col-md-6 col-sm-8 col-lg-4 mx-auto mt-4">
              <div class="card border border-3 border-dark p-3">
                  <div class="card-body">
                    <h4 class="card-text text-center"><%= link_to clan.name, clan_path(clan), :class => "text-decoration-none" %></h4>
                  </div>
              </div>
            </div>
        <% end %>
        </div>
    </div>
    <div class="justify-content-center text-center mt-3 mb-3">
        <%= page_entries_info @clans %>
    </div>
    <div class="pagination justify-content-center">
        <%= paginate @clans, window: 2 %>
    </div>
  </div>
</div>

