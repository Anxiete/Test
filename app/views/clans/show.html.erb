<%= render "card/header" %>
<div class="container-fluid px-5">
  <div class="row">
    <div class="column-margin col-lg-9 mx-auto pt-4">
      <h1 class="fw-bold text-center"><%=@clan.name%></h1>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb pt-3 d-flex justify-content-center">
          <li class="breadcrumb-item"><a href="<%= homepage_path %>">Home</a></li>
          <li class="breadcrumb-item"><a href="<%= clans_path %>">Clan</a></li>
          <li class="breadcrumb-item active" aria-current="page"><%=@clan.name%></a></li>
      </ol>
    </nav>
    <hr class="mt-3">
  </div>
  <% if flash[:notice] %>
    <p class="text-center alert alert-success"><%= flash[:notice] %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>
  <div class="col-12 mx-auto">
    <div class="row">
      <% @clan_cards.each do |card_clan| %>
        <%= render "card/card", card: card_clan %>
      <% end %>
    </div>
  </div>
  <div class="justify-content-center text-center mt-3 mb-3">
    <%= page_entries_info @clan_cards %>
  </div>
  <div class="pagination justify-content-center">
    <%= paginate @clan_cards, window: 2 %>
  </div>
</div>
