<%= render "header" %>
<div class="container-fluid px-5">
  <div class="row">
    <div class="column-margin col-lg-9 mx-auto pt-4">
      <h1 class="fw-bold text-center">Cards In-Stock</h1>
      <hr class="mt-3">
    </div>
    <% if flash[:notice] %>
      <p class="text-center alert alert-success"><%= flash[:notice] %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <div class="col-12 mx-auto">
      <div class="row">
        <% @cards.each do |card| %>
          <%= render "card", card: card %>
        <% end %>
      </div>
    </div>
    <div class="text-center mt-3 mb-3">
      <%= page_entries_info @cards %>
    </div>
    <div class="pagination justify-content-center">
      <%= paginate @cards, window: 2%>
    </div>
  </div>
</div>
<%= render "footer" %>
